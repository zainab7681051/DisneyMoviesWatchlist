@page "{id:int}"
@model MovieModel
@{
    ViewData["Title"] = @Model.movie?.Title ?? "404";
}
<div class="container mt-4">

    @if (Model.movie != null)
    {
        <div class="text-center">
            <h1 class="display-4">@Model.movie.Title - @Model.movie.Year</h1>
        </div>
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.movie.Image" alt="@Model.movie.Title+ ' '+@Model.movie.Year" class="img-fluid rounded">
            </div>
            <div class="col-md-8">
                <h5>Rating: <span>@Model.movie.Rating / 10</span></h5>
                <h5>Metascore: <span>@Model.movie.Metascore / 100</span></h5>
                <h5>Runtime: <span>@Model.movie.Runtime</span></h5>
                <h5>Genre: <span>@Model.movie.Genre</span></h5>
                <h5>Summary: <span>@Model.movie.Summary</span></h5>
                <h5>Director(s): <span>@Model.movie.Directors</span></h5>
                <h5>Stars: <span>@Model.movie.Stars</span></h5>
                <a href="https://www.imdb.com/@Model.movie.Link">
                    <h6>IMDB page</h6>
                </a>
            </div>
            @* default style for all h tags//
        margin-top: 0;
        margin-bottom: 0.5rem;
        font-weight: 500;
        line-height: 1.2;

        defaoult size for h5//
        font-size: 1.25re
        *@
        </div>
    }
    else
    {
        <h1>404, Movie does not exist.</h1>
    }
</div>
